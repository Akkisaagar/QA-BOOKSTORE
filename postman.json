	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"/// Always attach API key if present\r",
					"// Attach API key if available\r",
					"const apiKey = pm.environment.get(\"apiKey\");\r",
					"if (apiKey) {\r",
					"    pm.request.headers.upsert({\r",
					"        key: \"x-api-key\",\r",
					"        value: apiKey\r",
					"    });\r",
					"}\r",
					"\r",
					"// Attach JWT token if available\r",
					"const token = pm.environment.get(\"token\");\r",
					"if (token) {\r",
					"    pm.request.headers.upsert({\r",
					"        key: \"Authorization\",\r",
					"        value: \"Bearer \" + token\r",
					"    });\r",
					"}\r",
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"// ================= BASIC HEALTH =================\r",
					"pm.test(\"No server crash (no 5xx)\", function () {\r",
					"    pm.expect(pm.response.code).to.be.below(500);\r",
					"});\r",
					"\r",
					"pm.test(\"Response time < 2 seconds\", function () {\r",
					"    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
					"});\r",
					"\r",
					"pm.test(\"Response is JSON\", function () {\r",
					"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\r",
					"});\r",
					"\r",
					"// ================= SAFE JSON PARSE =================\r",
					"let json = {};\r",
					"try {\r",
					"    json = pm.response.json();\r",
					"} catch (e) {\r",
					"    pm.test(\"Invalid JSON response\", () => {\r",
					"        throw new Error(\"Response is not valid JSON\");\r",
					"    });\r",
					"}\r",
					"\r",
					"// ================= AUTH HANDLING =================\r",
					"if (pm.request.url.toString().includes(\"/auth\")) {\r",
					"    if (pm.response.code === 200) {\r",
					"        pm.test(\"Login returns API Key\", () => pm.expect(json).to.have.property(\"apiKey\"));\r",
					"        pm.test(\"Login returns JWT Token\", () => pm.expect(json).to.have.property(\"token\"));\r",
					"\r",
					"        pm.environment.set(\"apiKey\", json.apiKey);\r",
					"        pm.environment.set(\"token\", json.token);\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 401) {\r",
					"        pm.test(\"Invalid credentials blocked\", () => {\r",
					"            pm.expect(json.message).to.include(\"Invalid\");\r",
					"        });\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= SECURITY =================\r",
					"if (pm.response.code === 401 || pm.response.code === 403) {\r",
					"    pm.test(\"Security error contains message\", () => {\r",
					"        pm.expect(json).to.have.property(\"message\");\r",
					"    });\r",
					"}\r",
					"\r",
					"// ================= BOOKS VALIDATION =================\r",
					"if (pm.request.url.toString().includes(\"/books\") && pm.request.method === \"GET\") {\r",
					"    pm.test(\"Books is an array\", () => pm.expect(json).to.be.an(\"array\"));\r",
					"\r",
					"    json.forEach(b => {\r",
					"        pm.test(\"Book object is valid\", () => {\r",
					"            pm.expect(b).to.have.property(\"id\");\r",
					"            pm.expect(b).to.have.property(\"name\");\r",
					"            pm.expect(b).to.have.property(\"stock\");\r",
					"            pm.expect(b.stock).to.be.a(\"number\");\r",
					"        });\r",
					"\r",
					"        pm.test(\"Stock is never negative\", () => {\r",
					"            pm.expect(b.stock).to.be.at.least(0);\r",
					"        });\r",
					"    });\r",
					"}\r",
					"\r",
					"// ================= ADD BOOK NEGATIVES =================\r",
					"if (pm.request.url.toString().includes(\"/books\") && pm.request.method === \"POST\") {\r",
					"    if (pm.response.code === 401) {\r",
					"        pm.test(\"Add book blocked without API key\", () => true);\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 403) {\r",
					"        pm.test(\"Add book blocked for invalid token\", () => true);\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= ORDER NEGATIVES =================\r",
					"if (pm.request.url.toString().includes(\"/orders\") && pm.request.method === \"POST\") {\r",
					"    if (pm.response.code === 404) {\r",
					"        pm.test(\"Invalid bookId rejected\", () => {\r",
					"            pm.expect(json.message).to.include(\"not found\");\r",
					"        });\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 400) {\r",
					"        pm.test(\"Out of stock blocked\", () => {\r",
					"            pm.expect(json.message).to.include(\"stock\");\r",
					"        });\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 401 || pm.response.code === 403) {\r",
					"        pm.test(\"Order blocked due to auth failure\", () => true);\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= ORDERS VALIDATION =================\r",
					"if (pm.request.url.toString().includes(\"/orders\") && pm.request.method === \"GET\" && pm.response.code === 200) {\r",
					"    pm.test(\"Orders is an array\", () => pm.expect(json).to.be.an(\"array\"));\r",
					"\r",
					"    json.forEach(o => {\r",
					"        pm.test(\"Order structure is valid\", () => {\r",
					"            pm.expect(o).to.have.property(\"id\");\r",
					"            pm.expect(o).to.have.property(\"bookName\");\r",
					"        });\r",
					"    });\r",
					"}\r",
					"\r",
					"// ================= DELETE ORDER NEGATIVES =================\r",
					"if (pm.request.method === \"DELETE\") {\r",
					"    if (pm.response.code === 404) {\r",
					"        pm.test(\"Invalid order id rejected\", () => {\r",
					"            pm.expect(json.message).to.include(\"not found\");\r",
					"        });\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 401 || pm.response.code === 403) {\r",
					"        pm.test(\"Delete blocked for unauthorized user\", () => true);\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= RESET =================\r",
					"if (pm.request.url.toString().includes(\"/reset\")) {\r",
					"    if (pm.response.code === 200) {\r",
					"        pm.test(\"Reset executed successfully\", () => {\r",
					"            pm.expect(json.message).to.match(/reset/i);\r",
					"        });\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 401 || pm.response.code === 403) {\r",
					"        pm.test(\"Reset blocked for non-admin\", () => true);\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= AUDIT =================\r",
					"if (pm.request.url.toString().includes(\"/audit\")) {\r",
					"    if (pm.response.code === 200) {\r",
					"        pm.test(\"Audit is an array\", () => pm.expect(json).to.be.an(\"array\"));\r",
					"\r",
					"        json.forEach(l => {\r",
					"            pm.test(\"Audit entry valid\", () => {\r",
					"                pm.expect(l).to.have.property(\"time\");\r",
					"                pm.expect(l).to.have.property(\"action\");\r",
					"            });\r",
					"        });\r",
					"    }\r",
					"\r",
					"    if (pm.response.code === 401 || pm.response.code === 403) {\r",
					"        pm.test(\"Audit blocked without permission\", () => true);\r",
					"    }\r",
					"}\r",
					"\r",
					"// ================= DATA INTEGRITY =================\r",
					"pm.test(\"Response body is not empty\", () => {\r",
					"    pm.expect(pm.response.text()).to.not.be.empty;\r",
					"});\r",
					""
				]
			}
		}
